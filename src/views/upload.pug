extends base

block content
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(name="title", placeholder="Put the title of the video", type="text", required, maxlength=80)
        input(placeholder="Description", required, type="text", name="description", minlength=20)
        input(placeholder="Hashtags, separated by comma.", required, type="text", name="hashtags")
        input(type="submit" value="upload video")